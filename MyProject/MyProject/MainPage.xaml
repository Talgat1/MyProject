<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProject.MainPage" 
             NavigationPage.HasNavigationBar="False"
             Visual="Material">

    <StackLayout Margin="10,40">
        <Image x:Name="ImageMenu" Opacity="0.8" Source="image.png"/>
        <StackLayout>
            <Entry BackgroundColor="#DCDCDC" Placeholder="Логин" Margin="20,40,20,0"/>
            <Entry BackgroundColor="#DCDCDC" Placeholder="Пароль"  Margin="20,40,20,20"/>
            <Button Margin="20,60,0,0" x:Name="Registration" Clicked="Reg" HorizontalOptions="Start" BackgroundColor="#00B2FF" CornerRadius="200" TextColor="White" FontSize="11" Text="Зарегистрироваться"/>
            <Button Margin="0,-40,30,0" x:Name="Login" Clicked="Vhod" HorizontalOptions="End" BackgroundColor="#00B2FF" CornerRadius="200" TextColor="White" FontSize="11" Text="   Войти   "/>
        </StackLayout> 
        
    </StackLayout>

</ContentPage>

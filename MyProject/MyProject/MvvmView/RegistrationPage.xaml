<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProject.RegistrationPage" 
             NavigationPage.HasNavigationBar="True"
             Visual="Material">
    <NavigationPage.TitleView>
        <StackLayout>
            <Label HorizontalOptions="CenterAndExpand" TextColor="White" Text="Регистрация" FontSize="Title" Margin="0,0,65,0"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <StackLayout Margin="50,0,50,0" >
        <StackLayout>
            <Entry BackgroundColor="#DCDCDC" x:Name="LoginTxt" Margin="0,50,0,0"  Placeholder="Логин" TextColor="Black" Keyboard="Text"/>
            <Entry BackgroundColor="#DCDCDC" x:Name="EmailTxt" Margin="0,50,0,0" Placeholder="E-mail" TextColor="Black"  Keyboard="Email"/>
            <Entry BackgroundColor="#DCDCDC" x:Name="PasswordTxt" Margin="0,50,0,0" Placeholder="Пароль" TextColor="Black"  IsPassword="True"/>
            <Entry BackgroundColor="#DCDCDC" x:Name="PasswordCompleteTxt" Margin="0,50,0,0" Placeholder="Пароль" TextColor="Black" IsPassword="True"/>
        </StackLayout>
        <StackLayout>
            <Button Margin="0,70" BackgroundColor="#00B2FF" CornerRadius="200" TextColor="White" FontSize="12"  Text="Зарегистрироваться"/>
        </StackLayout>
    </StackLayout>
</ContentPage>